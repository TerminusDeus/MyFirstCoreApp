@model MyFirstCoreApp.Models.Award

@{
    ViewData["Title"] = "Удалить";
}

<h2>Удалить награду</h2>

<h3>Вы уверены?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <text>Название</text>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            <text>Описание</text>
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            <a asp-action="Index">Вернуться к таблице</a>
        </div>
    </form>
</div>

@model MyFirstCoreApp.Models.Rewarding

@{
    ViewData["Title"] = "Редактировать";
}

<h2>Редактирование</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Редактирование данных награждения</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="RewardingID" />
        <div class="form-group">
            <label asp-for="UserID" class="control-label col-md-2">ID пользователя</label>
            <div class="col-md-10">
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="UserID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AwardID" class="control-label col-md-2">ID награды</label>
            <div class="col-md-10">
                <select asp-for="AwardID" class="form-control" asp-items="ViewBag.AwardID"></select>
                <span asp-validation-for="AwardID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Вернуться к таблице</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model MyFirstCoreApp.Models.Rewarding

@{
    ViewData["Title"] = "Создать";
}

<h2>Новое награждение</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Введите данные награждения</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserID" class="col-md-2 control-label">ID пользователя</label>
            <div class="col-md-10">
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AwardID" class="col-md-2 control-label">ID награды</label>
            <div class="col-md-10">
                <select asp-for="AwardID" class ="form-control" asp-items="ViewBag.AwardID"></select>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Вернуться к таблице</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
